<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotesAuraProgrammingGuide"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">
        
        <!-- Splash Activity -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Auth Activity -->
        <activity
            android:name=".activities.AuthActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- Main Activity -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
            
        <!-- Course Detail Activity -->
        <activity
            android:name=".activities.CourseDetailActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity" />
            
        <!-- Exercise Activity -->
        <activity
            android:name=".activities.ExerciseActivity"
            android:exported="false"
            android:parentActivityName=".activities.CourseDetailActivity" />
            
        <!-- Payment Activity -->
        <activity
            android:name=".activities.PaymentActivity"
            android:exported="false"
            android:parentActivityName=".activities.CourseDetailActivity" />
            
        <!-- Search Activity -->
        <activity
            android:name=".activities.SearchActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity"
            android:windowSoftInputMode="adjustPan" />
            
        <!-- Admin Panel Activity -->
        <activity
            android:name=".activities.AdminPanelActivity"
            android:exported="false" />
            
        <!-- Admin Users Activity -->
        <activity
            android:name=".activities.AdminUsersActivity"
            android:exported="false"
            android:parentActivityName=".activities.AdminPanelActivity" />
            
        <!-- Admin User Detail Activity -->
        <activity
            android:name=".activities.AdminUserDetailActivity"
            android:exported="false"
            android:parentActivityName=".activities.AdminUsersActivity" />
            
        <!-- Admin Payments Activity -->
        <activity
            android:name=".activities.AdminPaymentsActivity"
            android:exported="false"
            android:parentActivityName=".activities.AdminPanelActivity" />
            
        <!-- Admin Courses Activity -->
        <activity
            android:name=".activities.AdminCoursesActivity"
            android:exported="false"
            android:parentActivityName=".activities.AdminPanelActivity" />
            
        <!-- Admin Analytics Activity -->
        <activity
            android:name=".activities.AdminAnalyticsActivity"
            android:exported="false"
            android:parentActivityName=".activities.AdminPanelActivity" />
            
        <!-- Admin Add Course Activity -->
        <activity
            android:name=".activities.AdminAddCourseActivity"
            android:exported="false"
            android:parentActivityName=".activities.AdminPanelActivity" />
            

        <!-- Admin Manage Categories Activity -->
        <activity
            android:name=".activities.AdminManageCategoriesActivity"
            android:exported="false"
            android:parentActivityName=".activities.AdminPanelActivity" />

        <!-- Admin Manage Practice Categories Activity -->
        <activity
            android:name=".activities.AdminManagePracticeCategoriesActivity"
            android:exported="false"
            android:parentActivityName=".activities.AdminPanelActivity" />

        <!-- Admin Manage Practice Exercises Activity -->
        <activity
            android:name=".activities.AdminManagePracticeExercisesActivity"
            android:exported="false"
            android:parentActivityName=".activities.AdminManagePracticeCategoriesActivity" />
        <!-- Admin Manage Practice Lists Activity -->
        <activity
            android:name=".activities.AdminManagePracticeListsActivity"
            android:exported="false"
            android:parentActivityName=".activities.AdminPanelActivity" />

        <!-- Admin Manage Practice Activity -->
        <activity
            android:name=".activities.AdminManagePracticeActivity"
            android:exported="false"
            android:parentActivityName=".activities.AdminPanelActivity" />

        <!-- Admin Manage Featured Courses Activity -->
        <activity
            android:name=".activities.AdminManageFeaturedCoursesActivity"
            android:exported="false"
            android:parentActivityName=".activities.AdminPanelActivity" />

        <!-- Admin Manage Interview Activity -->
        <activity
            android:name=".activities.AdminManageInterviewActivity"
            android:exported="false"
            android:parentActivityName=".activities.AdminPanelActivity" />

        <!-- PDF Viewer Activity -->
        <activity
            android:name=".activities.PdfViewerActivity"
            android:exported="false"
            android:theme="@style/Theme.NotesAuraProgrammingGuide" />
            
        <!-- Optimized PDF Viewer Activity -->
        <activity
            android:name=".activities.OptimizedPdfViewerActivity"
            android:exported="false"
            android:theme="@style/Theme.NotesAuraProgrammingGuide"
            android:hardwareAccelerated="true" />
            
        <!-- Web PDF Viewer Activity -->
        <activity
            android:name=".activities.WebPdfViewerActivity"
            android:exported="false"
            android:theme="@style/Theme.NotesAuraProgrammingGuide"
            android:hardwareAccelerated="true" />
            
        <!-- Simple PDF Viewer Activity -->
        <activity
            android:name=".activities.SimplePdfViewerActivity"
            android:exported="false"
            android:theme="@style/Theme.NotesAuraProgrammingGuide"
            android:hardwareAccelerated="true" />

        <!-- Web View Activity -->
        <activity
            android:name=".activities.WebViewActivity"
            android:exported="false"
            android:theme="@style/Theme.NotesAuraProgrammingGuide" />

        <!-- Practice Activity -->
        <activity
            android:name=".activities.PracticeActivity"
            android:exported="false" />

        <!-- Practice Lists Activity -->
        <activity
            android:name=".activities.PracticeListsActivity"
            android:exported="false"
            android:parentActivityName=".activities.PracticeActivity" />

        <!-- Practice Exercises Activity -->
        <activity
            android:name=".activities.PracticeExercisesActivity"
            android:exported="false"
            android:parentActivityName=".activities.PracticeListsActivity" />

        <!-- Practice Content Activity -->
        <activity
            android:name=".activities.PracticeContentActivity"
            android:exported="false"
            android:parentActivityName=".activities.PracticeExercisesActivity" />

        <!-- Interview Activity -->
        <activity
            android:name=".activities.InterviewActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity" />

        <!-- Interview Questions Activity -->
        <activity
            android:name=".activities.InterviewQuestionsActivity"
            android:exported="false"
            android:parentActivityName=".activities.InterviewActivity" />

        <!-- Interview Content Activity -->
        <activity
            android:name=".activities.InterviewContentActivity"
            android:exported="false"
            android:parentActivityName=".activities.InterviewQuestionsActivity" />

        <!-- E-books Activities -->
        <activity
            android:name=".activities.EbooksActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity" />

        <activity
            android:name=".activities.EbookSubcategoriesActivity"
            android:exported="false"
            android:parentActivityName=".activities.EbooksActivity" />

        <activity
            android:name=".activities.EbooksListActivity"
            android:exported="false"
            android:parentActivityName=".activities.EbookSubcategoriesActivity" />

        <!-- Quiz Activities -->
        <activity
            android:name=".activities.QuizCategoriesActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity" />

        <activity
            android:name=".activities.QuizSubcategoriesActivity"
            android:exported="false"
            android:parentActivityName=".activities.QuizCategoriesActivity" />

        <activity
            android:name=".activities.QuizWebViewActivity"
            android:exported="false"
            android:parentActivityName=".activities.QuizSubcategoriesActivity" />

        <activity
            android:name=".activities.AdminManageQuizzesActivity"
            android:exported="false"
            android:parentActivityName=".activities.AdminPanelActivity" />

        <!-- Firebase Messaging Service -->
        <service
            android:name=".services.NotificationService"
            android:exported="false"
            android:directBootAware="true"
            android:stopWithTask="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        
        <!-- Notification Listener Service -->
        <service
            android:name=".services.NotificationListenerService"
            android:exported="false" />
        
        <!-- Notifications Activity -->
        <activity
            android:name=".activities.NotificationsActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity" />
        
        <!-- Announcement Activity -->
        <activity
            android:name=".activities.AnnouncementActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        
        <!-- Maintenance Activity -->
        <activity
            android:name=".activities.MaintenanceActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        
        <!-- Update Activity -->
        <activity
            android:name=".activities.UpdateActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        
        <!-- About Activity -->
        <activity
            android:name=".activities.AboutActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        
        <!-- FileProvider for PDF sharing -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>