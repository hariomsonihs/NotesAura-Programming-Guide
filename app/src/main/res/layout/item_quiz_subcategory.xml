<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <!-- Quiz Number Circle -->
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_gradient_accent"
            android:gravity="center"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/quiz_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </LinearLayout>

        <!-- Quiz Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subcategory_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quiz Topic Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_light"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/quiz_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸŽ¯ Test your skills"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_light"
                    android:alpha="0.8"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/question_count_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 Q"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_gradient_secondary"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Arrow Icon -->
        <LinearLayout
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/circle_light_bg"
            android:gravity="center"
            android:layout_marginStart="12dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/primary_start" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>