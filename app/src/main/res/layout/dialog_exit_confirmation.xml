<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="16dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_gradient_light"
        android:padding="24dp">

        <!-- Header with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/accent_red">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_exit"
                    app:tint="@color/white" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Exit NotesAura?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_light" />

        </LinearLayout>

        <!-- Message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to exit the app? Your learning progress will be saved."
            android:textSize="14sp"
            android:textColor="@color/text_secondary_light"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="24dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Stay Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_stay"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface_light"
                android:layout_marginEnd="12dp"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="No, Stay"
                    android:textColor="@color/text_primary_light"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingHorizontal="20dp" />

            </androidx.cardview.widget.CardView>

            <!-- Exit Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_exit"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/accent_red"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Yes, Exit"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingHorizontal="20dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>