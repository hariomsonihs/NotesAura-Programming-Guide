<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface_light"
    android:foreground="@drawable/ripple_effect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Exercise Icon -->
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:background="@drawable/bg_circle_primary"
            android:gravity="center"
            android:layout_marginEnd="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“–"
                android:textSize="18sp" />

        </LinearLayout>

        <!-- Exercise Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/exercise_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Exercise Title"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_light" />

                <!-- Completed Tick -->
                <TextView
                    android:id="@+id/exercise_completed_tick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ…"
                    android:textSize="14sp"
                    android:layout_marginStart="6dp"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/exercise_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Exercise description"
                android:textSize="12sp"
                android:textColor="@color/text_secondary_light"
                android:maxLines="1"
                android:ellipsize="end"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Offline Icon -->
        <ImageView
            android:id="@+id/offline_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_eye"
            android:layout_marginStart="4dp"
            app:tint="@color/accent_green"
            android:visibility="gone" />

        <!-- Delete Icon -->
        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_delete"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="2dp"
            app:tint="@color/error_red"
            android:visibility="gone" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_forward"
            android:layout_marginStart="6dp"
            app:tint="@color/text_secondary_light" />

    </LinearLayout>

</androidx.cardview.widget.CardView>