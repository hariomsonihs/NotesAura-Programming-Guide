<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_gradient_primary"
        android:elevation="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“š"
                            android:textSize="24sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Course Details"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary_light" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/course_id_edit"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Course ID (e.g., java_advanced)"
                        android:inputType="text"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/course_title_edit"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Course Title"
                        android:inputType="text"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/course_desc_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Course Description"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary_light"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/category_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Difficulty Level"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary_light"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/difficulty_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/course_price_edit"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:hint="Price (â‚¹)"
                            android:inputType="numberDecimal" />

                        <EditText
                            android:id="@+id/course_duration_edit"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:hint="Duration (hours)"
                            android:inputType="number" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/course_rating_edit"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Rating (1.0 - 5.0)"
                        android:inputType="numberDecimal"
                        android:layout_marginTop="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ¯"
                            android:textSize="24sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Course Description Details"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary_light" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learning Objectives (one per line)"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary_light"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/learning_objectives_edit"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:hint="Enter learning objectives, one per line:&#10;Understand basic concepts&#10;Build practical projects&#10;Master advanced techniques"
                        android:inputType="textMultiLine"
                        android:gravity="top"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Target Audience (one per line)"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary_light"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/target_audience_edit"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:hint="Enter target audience, one per line:&#10;Beginners with no experience&#10;Students learning programming&#10;Professionals upgrading skills"
                        android:inputType="textMultiLine"
                        android:gravity="top"
                        android:layout_marginBottom="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <Button
                        android:id="@+id/show_assets_files_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Show Available Asset Files"
                        android:textColor="@color/primary_start"
                        android:background="@android:color/transparent"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/assets_file_tip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Tip: Click above to see all available HTML file paths in assets."
                        android:textColor="@color/text_secondary_light"
                        android:textSize="12sp"
                        android:padding="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/add_course_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="âœ”ï¸ Save Course"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/bg_gradient_primary"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
