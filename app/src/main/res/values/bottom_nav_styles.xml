<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Bottom Navigation Text Styles -->
    <style name="BottomNavTextActive">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavTextInactive">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Missing Styles -->

    <style name="PrimaryButton">
        <item name="android:background">@drawable/bg_gradient_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:background">@drawable/bg_gradient_secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="InputField">
        <item name="android:background">@drawable/bg_input_field</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

</resources>